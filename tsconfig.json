{
    "compilerOptions": {
        "target": "es2018",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "CommonJS",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noFallthroughCasesInSwitch": true,
        "removeComments": true,
        "outDir": "./build"
    },
    "include": ["src/**/*"]
}
